<div class="container padded bg-grey-light">
  <div class="row">
    <div class="col-xs-12">
      <h1 class="text-center">Better cocktails on earth</h1>
      <div class="row">
        <% @cocktails.each do |cocktail| %>
          <div class="col-xs-12 col-md-4">
            <%= content_tag :div, class: 'card', style: "background-image: url(#{cl_image_path cocktail.photo.path})" do %>
              <div class="card-title">
                <%= cocktail.name %>
              </div>
              <%= link_to '', cocktail_path(cocktail), class: 'card-link' %>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
