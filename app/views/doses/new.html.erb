<div class="container">
  <div class="row">
    <div class="col-xs-12 col-md-8 col-md-offset-2">
      <h2>New dose for cocktail: <%= @cocktail.name %></h2>
      <%= simple_form_for [@cocktail, @dose] do |f| %>
        <%= f.error_notification %>

        <%= f.input :description %>
        <%= f.association :ingredient, prompt: "Choose an ingredient"%>

        <%= f.button :submit %>
      <% end %>
    </div>
  </div>
</div>
